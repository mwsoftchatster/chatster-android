<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorWhite">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroupChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlNoGroupChats"
        android:visibility="gone"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/ivNoGroupChats"
            android:src="@drawable/no_group_chats_512"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoGroupChats"
            android:text="@string/no_group_chats_yet"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:layout_below="@+id/ivNoGroupChats"/>
    </RelativeLayout>
</FrameLayout>