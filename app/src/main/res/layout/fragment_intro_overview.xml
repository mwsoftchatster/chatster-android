<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivIntroPagerLogo"
        android:src="@drawable/chat_intro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIntroPagerThanks"
        android:text="@string/thank_you_for_installing_chatster"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivIntroPagerLogo"
        android:layout_marginTop="25dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIntroPagerAlmostReady"
        android:text="@string/almost_ready"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvIntroPagerThanks"
        android:layout_marginTop="25dp"
        android:gravity="center"/>

</RelativeLayout>