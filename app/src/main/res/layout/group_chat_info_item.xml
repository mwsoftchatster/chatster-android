<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/colorWhite">

    <ImageView
        android:id="@+id/ivGroupChatInfoContact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/user_256" />

    <TextView
        android:id="@+id/tvUserNameGroupChatInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/ivGroupChatInfoContact"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvUserStatusGroupChatInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvUserNameGroupChatInfo"
        android:layout_toRightOf="@+id/ivGroupChatInfoContact"
        android:textSize="12sp"
        />


</RelativeLayout>