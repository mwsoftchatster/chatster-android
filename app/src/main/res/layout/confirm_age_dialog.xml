<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgeConfirmPhoneDialogDesc"
        android:text="@string/at_least_16_years_old_desc"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgeConfirmPhoneDialogQuestion"
        android:text="@string/at_least_16_years_old_q"
        android:textSize="16sp"
        android:lineSpacingExtra="3dp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvAgeConfirmPhoneDialogDesc"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

</RelativeLayout>