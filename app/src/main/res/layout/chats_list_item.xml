<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorWhite">
    <ImageView
        android:id="@+id/ivProfileChats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/user_256" />

    <TextView
        android:id="@+id/tvUserNameChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/ivProfileChats"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvLastActivityMessageChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvUserNameChats"
        android:layout_toRightOf="@+id/ivProfileChats"
        android:textSize="12sp"
        />

    <TextView
    android:id="@+id/tvLastActivityDateChats"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:textSize="12sp"
    />

    <TextView
        android:id="@+id/tvUnreadMsgChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvLastActivityDateChats"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:background="@drawable/unread_message_count"
        android:visibility="gone"/>
</RelativeLayout>