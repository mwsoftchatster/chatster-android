<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ivHistoryUserProfilePic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tvHistoryUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivHistoryUserProfilePic"
        android:textSize="16sp"
        android:text=""
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvHistoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvHistoryUserName"
        android:layout_toEndOf="@+id/ivHistoryUserProfilePic"
        android:textSize="12sp"
        android:lineSpacingExtra="3dp" />

    <TextView
        android:id="@+id/tvHistoryCreated"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:textSize="12sp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ivHistoryPost"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvHistoryDescription"
        android:visibility="gone"/>

</RelativeLayout>