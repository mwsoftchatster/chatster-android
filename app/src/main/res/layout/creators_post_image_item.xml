<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivCreatorsProfilePic"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/content_creators_profile_picture"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tvUsername"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/ivCreatorsProfilePic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPostCreated"
        android:text=""
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"/>

    <ImageView
        android:id="@+id/ivImagePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCreatorsProfilePic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_post"
        android:minHeight="200dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivLike"
        android:src="@drawable/like_256"
        android:layout_below="@+id/ivImagePost"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="3dp"
        android:contentDescription="@string/like_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/tvLikeCount"
        android:text=""
        android:textSize="14sp"
        android:layout_below="@+id/ivImagePost"
        android:layout_toEndOf="@+id/ivLike"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/tvCommentCount"
        android:text=""
        android:textSize="14sp"
        android:layout_below="@+id/ivImagePost"
        android:layout_toStartOf="@+id/ivPostComments"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:paddingTop="5dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivPostComments"
        android:src="@drawable/comments_256"
        android:layout_below="@+id/ivImagePost"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/post_comments"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPostCaptionUserName"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/ivLike"
        android:gravity="start"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPostCaption"
        android:text=""
        android:textSize="14sp"
        android:layout_below="@+id/tvPostCaptionUserName"
        android:gravity="start"
        android:padding="5dp"
        android:lineSpacingExtra="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tvPostItemSeparator"
        android:text=""
        android:textSize="12sp"
        android:layout_below="@+id/tvPostCaption"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/colorDelimiter"/>
</RelativeLayout>