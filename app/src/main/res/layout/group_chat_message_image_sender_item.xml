<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/my_textview_sender"
    android:layout_margin="10dp"
    android:layout_gravity="end"
    android:layout_alignParentEnd="true">

    <TextView
        android:id="@+id/tvGroupChatMessageImageSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:id="@+id/ivGroupChatMessageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGroupChatMessageImageSenderName"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:maxWidth="270dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/tvGroupChatMessageImageCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/ivGroupChatMessageImage"
        android:layout_alignEnd="@id/ivGroupChatMessageImage"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>
</RelativeLayout>