<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbCreatorsDiscover"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/ivDiscoverBack"
                android:src="@drawable/left_arrow"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/back"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchViewConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search"
                android:layout_toEndOf="@+id/ivDiscoverBack"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCreatorDiscover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbCreatorsDiscover"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCreatorConnectSearchResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbCreatorsDiscover"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="50dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/rlNoDiscoverPosts"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivDiscoverPostsEmpty"
            android:layout_centerInParent="true"
            android:src="@drawable/media_post_256"
            android:contentDescription="@string/posts"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDiscoverPostsEmpty"
            android:text="@string/no_posts_later"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorDelimiter"
            android:layout_below="@+id/ivDiscoverPostsEmpty"/>
    </RelativeLayout>

</RelativeLayout>